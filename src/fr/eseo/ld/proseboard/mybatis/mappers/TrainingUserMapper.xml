<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fr.eseo.ld.proseboard.mybatis.mappers.TrainingUserMapper">


	<resultMap type="TrainingUser" id="TrainingUserResult">
		<id property="idTraining" column="id_training" />
		<result property="idUser" column="id_user" />
		<result property="isAbsent" column="isAbsent" />
	</resultMap>
	
	<select id="getAllByIdUser" parameterType="Long" resultMap="TrainingUserResult">
		SELECT * 
		FROM training_user
		WHERE training_user.id_user=#{id}
	</select>
	
	
	
</mapper>