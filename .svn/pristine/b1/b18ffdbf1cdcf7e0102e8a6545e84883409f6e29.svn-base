<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fr.eseo.ld.proseboard.mybatis.mappers.AccountMapper">

	<resultMap type="Account" id="AccountResult">
		<id property="idAccount" column="id_account" />
		<result property="balance" column="solde" />
	</resultMap>
		
	<insert id="insert" parameterType="Account" useGeneratedKeys="true" keyProperty="idAccount" keyColumn="id_account">
		INSERT INTO account(solde)
		VALUES(#{balance})
	</insert>
	
	<select id="getById" resultMap="AccountResult" parameterType="_long">
		SELECT * FROM `account` WHERE id_account = #{idAccount} 
	</select>
	
	<select id="getIdByIdUser" resultType="_long" parameterType="_long">
		SELECT user.id_account FROM `user` WHERE user.id_user = #{id} 
	</select>
	
	<select id="getByIdTeam" resultMap="AccountResult" parameterType="_long">
		SELECT account.* 
		FROM account, team
		WHERE account.id_account = team.id_account
		AND team.id_team = #{idTeam}
	</select>
	
	<update id="update" parameterType="Account">
		UPDATE `account` SET `solde`= #{balance} WHERE id_account = #{idAccount} 
	</update>
	
	<update id="update2" parameterType="Account">
		UPDATE `account` SET `solde`= #{solde} WHERE id_account = #{account.idAccount} 
	</update>
	
	<delete id="delete" parameterType="_int">
		DELETE FROM `account` WHERE id_account = #{idAccount}
	</delete>	
	
	<select id="getByAccount" parameterType="Account" resultMap="AccountResult">
		SELECT * FROM `account` WHERE id_account = #{account.idAccount} 
	</select>
	
	<update id="creditAccount" parameterType="Account">
		UPDATE account
		SET solde = solde+#{balance}
		WHERE id_account = #{idAccount}
	</update>
	
	<update id="debitAccount" parameterType="Account">
		UPDATE account
		SET solde = solde-#{balance}
		WHERE id_account = #{idAccount}
	</update>
	
</mapper>