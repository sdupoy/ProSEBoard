<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@taglib prefix="t" tagdir="/WEB-INF/tags"%>

<t:main>
	<div class="row">
		<div class="col-sm-10 col-md-10 col-lg-10">
			<h1>Gestion des sessions</h1><br>
			<div class="list-group">		
  				<div class="list-group-item active"><b><label style="font-size:24px">Sessions</label></b></div>				
	  			<c:forEach items="${sessions}" var="session">  			
	  				<div class="list-group-item" style="height: 70px">  				
	  					<form method="get" action="DeleteSession">
		  					<button class="btn btn-warning pull-right" style="margin-left:25px" type="submit" name="idSession" value="${session.getId()}">
			 					 <span class="glyphicon glyphicon-remove" aria-hidden="true" style="font-size:15px"></span>
							</button>
						</form>					
						<form method="get" action="ManageTeams">
							<button class="btn btn-primary pull-left" type="submit" style="margin-right:15px" name="idSession" value="${session.getId()}">
			 					 <span class="glyphicon glyphicon-plus" aria-hidden="true" style="font-size:15px"></span>
							</button>
						</form>												
		  				<span class="label label-success label-as-badge pull-right" style="margin-left:5px;font-size:14px">&nbsp;Equipes: <c:out value="${session.getNbTeam()}"/>&nbsp;</span>
		  				<span class="label label-info label-as-badge pull-right" style="margin-left:5px;font-size:14px">&nbsp;Fin: <c:out value="${session.getSlashEndDate()}"/>&nbsp;</span>
		  				<span class="label label-info label-as-badge pull-right" style="font-size:14px">&nbsp;Début: <c:out value="${session.getSlashStartDate()}"/>&nbsp;</span><b>
		  				<label style="font-size:20px">&nbsp;<c:out value="${session.getName()}"/></label></b>  				
	  				</div>	  				
	  			</c:forEach>		
			</div><br>		
			<a href="CreateSession"><button class="btn btn-lg btn-primary pull-left" type="submit">Créer une nouvelle session</button></a>		
		</div>
	</div>
</t:main>