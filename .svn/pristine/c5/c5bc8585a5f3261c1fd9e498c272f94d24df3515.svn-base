package fr.eseo.ld.proseboard.selenium;

import static org.testng.AssertJUnit.assertEquals;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.htmlunit.HtmlUnitDriver;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class ProseBoardTestTeacher {
	private WebDriver webDriver;

	/*
	 * Initialise html driver + connexion en tant que team leader
	 */
	@BeforeClass
	public void initiateWebDriver() {
		webDriver = new HtmlUnitDriver();
		webDriver.get("http://localhost:8080/proseboard/login");
		WebElement mailBox = webDriver.findElement(By.name("login"));
		WebElement passwordBox = webDriver.findElement(By.name("password"));
		mailBox.sendKeys("jean.jean@proseboard.fr");
		passwordBox.sendKeys("admin");
		WebElement loginButton = webDriver.findElement(By.name("submit"));
		loginButton.click();
	}
	
	@Test
	public void testTitle(){
		assertEquals(webDriver.getCurrentUrl(),"http://localhost:8080/proseboard/");
	}
	@Test(dependsOnMethods={"testTitle"})
	public void testTeacherOption(){
		List<WebElement> options = webDriver.findElements(By.tagName("li"));
		assertEquals(options.get(4).getText(),"Facturer une session de formation");
	}
	@Test(dependsOnMethods={"testTeacherOption"})
	public void testTeacherLink(){
		WebElement link = webDriver.findElement(By.linkText("Facturer une session de formation"));
		link.click();
		assertEquals(webDriver.getCurrentUrl(),"http://localhost:8080/proseboard/chargeTrainingSession");
	}
}
